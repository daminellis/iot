const int pin_led = 13;
const int pin_interrupt = 2;
int estado = LOW;

void setup() {
  pinMode(pin_led, OUTPUT);
  pinMode(pin_interrupt, INPUT_PULLUP);
  attachInterrupt(digitalPinToInterrupt(pin_interrupt),pisca, FALLING);
}

void loop() {
  diitalWrite(pin_led, estado);
}

void pisca() {
  estado = !estado;
}
